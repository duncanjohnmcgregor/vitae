# Act secrets file template
# Copy this to .env.act and fill in your actual values
# This file contains environment variables and secrets for local GitHub Actions execution

# GitHub Actions environment variables
GITHUB_TOKEN=your_github_token_here
GITHUB_ACTOR=your_github_username

# Google Cloud Platform secrets (for production deployment testing)
GCP_PROJECT_ID=your_gcp_project_id
GCP_SA_KEY=your_service_account_key_json

# Firebase configuration
FIREBASE_TOKEN=your_firebase_token

# Node.js version
NODE_VERSION=18

# Local development flags
CI=true
GITHUB_ACTIONS=true

# GitHub event simulation variables
GITHUB_EVENT_NAME=pull_request
GITHUB_REF=refs/pull/1/merge
GITHUB_HEAD_REF=feature/local-test
GITHUB_BASE_REF=main

# Add any other secrets your workflows need here
# Format: SECRET_NAME=secret_value 